{
  "version": 8,
  "name": "SmartPick Light Mode",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://demotiles.maplibre.org/tiles/tiles.json"
    }
  },
  "metadata": {
    "smartpick:theme": "light-pastel",
    "smartpick:notes": "Replace sources.openmaptiles.url with your MapTiler endpoint for full coverage."
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#F4EDE1"
      }
    },

    {
      "id": "landuse-park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["in", "class", "park", "nature_reserve", "forest", "wood"],
      "paint": {
        "fill-color": "#E7F5DF",
        "fill-opacity": 0.6
      }
    },

    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#D5E7F0"
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#D5E7F0",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10, 0.3,
          14, 0.8,
          18, 1.5
        ]
      }
    },

    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "fill-color": "#F8F4EF",
        "fill-opacity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          14, 0.5,
          16, 0.8
        ]
      }
    },
    {
      "id": "building-outline",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "line-color": "#E8E4DF",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          15, 0.2,
          18, 0.5
        ],
        "line-opacity": 0.4
      }
    },

    {
      "id": "road-case",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["!in", "class", "rail", "ferry", "cycleway", "path", "footway", "pedestrian", "steps"],
        ["!in", "brunnel", "tunnel", "bridge"]
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#D1CBC0",
        "line-width": [
          "interpolate",
          ["exponential", 1.5],
          ["zoom"],
          5,
          [
            "match",
            ["get", "class"],
            "motorway", 1.2,
            ["trunk", "primary"], 1.0,
            ["secondary", "tertiary"], 0.8,
            0.6
          ],
          18,
          [
            "match",
            ["get", "class"],
            "motorway", 8,
            ["trunk", "primary"], 6.5,
            ["secondary", "tertiary"], 5,
            3.5
          ]
        ],
        "line-opacity": 0.5
      }
    },

    {
      "id": "road",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["!in", "class", "rail", "ferry", "cycleway", "path", "footway", "pedestrian", "steps"],
        ["!in", "brunnel", "tunnel", "bridge"]
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": [
          "match",
          ["get", "class"],
          ["motorway", "trunk", "primary"], "#D9D3C8",
          ["secondary", "tertiary"], "#E0DBD1",
          "#E8E4DF"
        ],
        "line-width": [
          "interpolate",
          ["exponential", 1.5],
          ["zoom"],
          5,
          [
            "match",
            ["get", "class"],
            "motorway", 0.8,
            ["trunk", "primary"], 0.6,
            ["secondary", "tertiary"], 0.5,
            0.3
          ],
          18,
          [
            "match",
            ["get", "class"],
            "motorway", 6,
            ["trunk", "primary"], 5,
            ["secondary", "tertiary"], 4,
            2.5
          ]
        ]
      }
    },

    {
      "id": "road-path",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["in", "class", "cycleway", "path", "footway", "pedestrian", "steps"],
        ["!in", "brunnel", "tunnel", "bridge"]
      ],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#D9D3C8",
        "line-dasharray": [2, 1.5],
        "line-width": [
          "interpolate",
          ["exponential", 1.5],
          ["zoom"],
          12, 0.6,
          18, 1.8
        ],
        "line-opacity": 0.6
      }
    },

    {
      "id": "tunnel-case",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "brunnel", "tunnel"], ["!in", "class", "rail", "ferry"]],
      "layout": {"line-cap": "round", "line-join": "round"},
      "paint": {
        "line-color": "#D1CBC0",
        "line-width": [
          "interpolate",
          ["exponential", 1.5],
          ["zoom"],
          6, 1.5,
          12, 2.5,
          16, 4,
          20, 6
        ],
        "line-opacity": 0.4
      }
    },
    {
      "id": "tunnel",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "brunnel", "tunnel"], ["!in", "class", "rail", "ferry"]],
      "layout": {"line-cap": "round", "line-join": "round"},
      "paint": {
        "line-color": [
          "match",
          ["get", "class"],
          ["motorway", "trunk", "primary"], "#D9D3C8",
          ["secondary", "tertiary"], "#E0DBD1",
          "#E8E4DF"
        ],
        "line-opacity": 0.5,
        "line-dasharray": [3, 2],
        "line-width": [
          "interpolate",
          ["exponential", 1.5],
          ["zoom"],
          6, 0.7,
          12, 1.5,
          16, 2.8,
          20, 4.5
        ]
      }
    },

    {
      "id": "bridge-case",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "brunnel", "bridge"], ["!in", "class", "rail", "ferry"]],
      "layout": {"line-cap": "round", "line-join": "round"},
      "paint": {
        "line-color": "#D1CBC0",
        "line-width": [
          "interpolate",
          ["exponential", 1.5],
          ["zoom"],
          6, 2,
          12, 3,
          16, 5,
          20, 7.5
        ],
        "line-opacity": 0.5
      }
    },
    {
      "id": "bridge",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["all", ["==", "brunnel", "bridge"], ["!in", "class", "rail", "ferry"]],
      "layout": {"line-cap": "round", "line-join": "round"},
      "paint": {
        "line-color": [
          "match",
          ["get", "class"],
          ["motorway", "trunk", "primary"], "#D9D3C8",
          ["secondary", "tertiary"], "#E0DBD1",
          "#E8E4DF"
        ],
        "line-width": [
          "interpolate",
          ["exponential", 1.5],
          ["zoom"],
          6, 0.8,
          12, 1.8,
          16, 3.2,
          20, 5.5
        ]
      }
    },

    {
      "id": "road-label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Inter Regular", "Noto Sans Regular"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          12, 9,
          16, 11,
          20, 14
        ],
        "symbol-placement": "line",
        "text-letter-spacing": 0.02
      },
      "paint": {
        "text-color": "#8B8275",
        "text-halo-color": "#F4EDE1",
        "text-halo-width": 1.5,
        "text-opacity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          11, 0,
          12, 0.5,
          14, 0.85
        ]
      }
    },

    {
      "id": "place-label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["in", "class", "city", "town", "village", "suburb"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Inter Medium", "Noto Sans Regular"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5, 10,
          8, 12,
          12, 14,
          16, 18
        ]
      },
      "paint": {
        "text-color": "#6B6358",
        "text-halo-color": "#F4EDE1",
        "text-halo-width": 1.5,
        "text-opacity": 0.95
      }
    }
  ]
}
