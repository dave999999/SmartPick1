{
  "version": 8,
  "name": "SmartPick Cosmic Dark",
  "metadata": {
    "smartpick:theme": "cosmic-dark",
    "smartpick:description": "Dark food-discovery theme with orange + mint accents"
  },
  "sprite": "https://api.maptiler.com/maps/streets/sprite",
  "glyphs": "https://api.maptiler.com/fonts/{fontstack}/{range}.pbf",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://api.maptiler.com/tiles/v3/tiles.json"
    }
  },
  "center": [44.793, 41.72],
  "zoom": 12,
  "pitch": 0,
  "bearing": 0,
  "light": {
    "anchor": "viewport",
    "color": "#ffffff",
    "intensity": 0.1
  },
  "transition": {
    "duration": 300,
    "delay": 0
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#050814"
      }
    },
    {
      "id": "land",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#101522"
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "paint": {
        "fill-color": "#101826",
        "fill-opacity": 0.55
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#181F30"
      }
    },
    {
      "id": "water-outline",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "line-color": "#222a3c",
        "line-width": 0.4
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "park",
      "paint": {
        "fill-color": "#123222",
        "fill-opacity": 0.55
      }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "motorway"],
      "paint": {
        "line-color": "#FF8A00",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5,
          0.3,
          10,
          2.2,
          14,
          4.0
        ],
        "line-opacity": 0.65
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "secondary", "trunk"],
      "paint": {
        "line-color": "#F2B57A",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          5,
          0.2,
          10,
          1.3,
          14,
          3.0
        ],
        "line-opacity": 0.7
      }
    },
    {
      "id": "road-street",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "street"],
      "paint": {
        "line-color": "#2C3448",
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          14,
          0.2,
          18,
          1.4
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "fill-color": "#171E2E",
        "fill-outline-color": "#222A3B",
        "fill-opacity": 0.9
      }
    },
    {
      "id": "poi-food",
      "type": "circle",
      "source": "openmaptiles",
      "source-layer": "poi",
      "filter": [
        "in",
        "class",
        "restaurant",
        "fast_food",
        "cafe",
        "bakery"
      ],
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          12,
          4,
          16,
          8
        ],
        "circle-color": "#FF8A00",
        "circle-opacity": 0.85,
        "circle-stroke-color": "#050814",
        "circle-stroke-width": 1.5
      }
    },
    {
      "id": "poi-food-glow",
      "type": "circle",
      "source": "openmaptiles",
      "source-layer": "poi",
      "filter": [
        "in",
        "class",
        "restaurant",
        "fast_food",
        "cafe",
        "bakery"
      ],
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          12,
          8,
          16,
          14
        ],
        "circle-color": "#FF8A00",
        "circle-opacity": 0.16
      }
    },
    {
      "id": "poi-shop",
      "type": "circle",
      "source": "openmaptiles",
      "source-layer": "poi",
      "filter": ["==", "class", "shop"],
      "paint": {
        "circle-radius": 4,
        "circle-color": "#37E5AE",
        "circle-opacity": 0.7
      }
    },
    {
      "id": "place-city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", "class", "city"],
      "layout": {
        "text-field": "{name:latin}\n{name:nonlatin}",
        "text-font": ["Open Sans Semibold", "Noto Sans Regular"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          4,
          10,
          10,
          16
        ],
        "text-max-width": 8
      },
      "paint": {
        "text-color": "#f5f7ff",
        "text-halo-color": "#050814",
        "text-halo-width": 1.2
      }
    },
    {
      "id": "road-label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "layout": {
        "text-field": "{name:latin}\n{name:nonlatin}",
        "text-font": ["Open Sans Regular", "Noto Sans Regular"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          13,
          11,
          17,
          15
        ],
        "symbol-placement": "line"
      },
      "paint": {
        "text-color": "#9CA9C8",
        "text-halo-color": "#050814",
        "text-halo-width": 1.0
      }
    },
    {
      "id": "poi-label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "poi",
      "minzoom": 14,
      "layout": {
        "text-field": "{name:latin}",
        "text-font": ["Open Sans Regular", "Noto Sans Regular"],
        "text-size": 12,
        "text-offset": [0, 0.8]
      },
      "paint": {
        "text-color": "#C9D3F0",
        "text-halo-color": "#050814",
        "text-halo-width": 0.8
      }
    }
  ]
}
